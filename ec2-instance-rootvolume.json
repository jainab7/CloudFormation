{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Creating an instance with root volume customized",
  
  "Parameters" : {
  
      "Subnet" : {
	  
	       "Description":"Select subnet",
		   "Type":"AWS::EC2::Subnet::Id"
	     
		},
		
	   "SecurityGroupId" : {
	        
			"Description":"Select Security Group",
			"Type":"AWS::EC2::SecurityGroup::Id"
	   
	   
	    },
       "InstanceType" : {
	   
            "Description" : "Web Server",
            "Type" : "String",
            "Default":"t2.micro",			
	        "AllowedValues":["t2.micro","t3.micro"]
	    
		}
    
	
	},
	
	"Mappings" : {
	   
	   "RegionMap" : {
			"us-east-1"      : { "HVM64" : "ami-e965ba80"},
			"us-west-1"      : { "HVM64" : "ami-0bdb828fd58c52235"},
			"eu-west-1"      : { "HVM64" : "ami-047bb4163c506cd98"},
			"ap-southeast-1" : { "HVM64" : "ami-08569b978cc4dfa10"},
			"ap-northeast-1" : { "HVM64" : "ami-06cd52961ce9f0d85"}
      }
	    
	
	},
	
    "Resources" : {
	
	  "WebServer" : {
	    
        "Type" : "AWS::EC2::Instance",
        "Properties" : {
        "ImageId" : {"Fn::FindInMap" : ["RegionMap",{"Ref":"AWS::Region"},"HVM64"]},
        "InstanceType" : {"Ref":"InstanceType"},
		"BlockDeviceMappings" : [
		  {
		    "DeviceName" : "/dev/sda",
			"Ebs" : {
			   "VolumeType" : "gp2",
			   "DeleteOnTermination" : "True",
			   "VolumeSize" : "10"
			
			 }
		  
		  }
		  
		  ],
		  "SubnetId":{"Ref":"Subnet"},
		  "SecurityGroupIds":[{"Ref":"SecurityGroupId"}]
	  
	    
	    }
	
	
	}



   },
   
   "Outputs":{
     
	 "WebServer":
	    {
		   "Description":"Instance Id",
		   "Value":{"Ref":"WebServer"}
		}
   
   
   
   }
   
}
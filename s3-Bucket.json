{

 "Parameters":{
   "BucketName":{
		"Type":"String"
   }
 
 },
 
 "Resources":{
   "myBucket":{	
   
		"Type":"AWS::S3::Bucket",
		"DeletionPolicy":"Retain",
		"Properties":{
			"BucketName":{"Ref":"BucketName"}
		}
   
   
   },
   
   
   "SampleBucketPolicy" : {
      "Type" : "AWS::S3::BucketPolicy",
      "Properties" : {
		 "Bucket" : {"Ref" : "myBucket"},
		 "PolicyDocument": {
		   "Statement":[{
			  "Action":["s3:GetObject"],
			  "Effect":"Allow",
			  "Resource": { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "myBucket" } , "/*" ]]},
			  "Principal":"*",
			  "Condition":{
				"StringLike":{
				  "aws:Referer":[
					 "http://www.example.com/*",
					 "http://example.com/*"
				  ]
			   }
			 }
		   }]
		 }
	   }
	}            
         
 
 
 }




}
